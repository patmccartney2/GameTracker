<%= form_for(@game, html: {multipart: true}) do |f| %>
  <ul>
  <% @game.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :genre %><br />
    <%= f.text_area :genre %>
  </p>
  <p>
    <%= f.label :system %><br />
    <%= f.text_area :system %>
  </p>
  <p>
    <%= f.label :release_year %><br />
    <%= f.text_area :release_year %>
  </p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.label :image, "Attach an Image" %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
