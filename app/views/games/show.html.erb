<h1><%= @game.title %></h1>
<p>
  Tags:
  <% @game.tags.each do |tag| %>
    <%= tag.name %>
  <% end %>
</p>
<p><%= @game.genre %></p>
<p><%= @game.system %></p>
<p><%= @game.release_year %></p>
<p><%= @game.created_at %></p>
<h3>Comments (<%= @game.comments.size %>)</h3>
<%= render partial: 'comments/form' %>
<%= render partial: 'games/comment', collection:@game.comments.reverse %>
<%= link_to "<< Back to Games List", games_path %>
<%= link_to "Delete", game_path(@game), method: :delete, data: {confirm: "Really delete the article?"} %>
<%= link_to "Edit", edit_game_path(@game) %>
